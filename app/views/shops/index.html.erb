<h2>List of shops</h2>

<div><%= link_to "Add new Shop", new_shop_path %></div>

<div>
    <table border='1'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% @shops.each do |shop| %>
            <tr>
                <td><%= shop.id %></td>
                <td><%= link_to shop.name, shop %></td>
                <td><%= link_to "Edit", edit_shop_path(shop) %></td>
                <td><%= link_to "Delete", shop, method: :delete, data: { confirm: "Are you sure ?" } %></td>
            </tr>
        <% end %>
    </table>
</div>
