<%= form_with model: shop do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% shop.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
